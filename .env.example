# ========== Django Settings ==========
# Generate SECRET_KEY with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# ⚠️ CRITICAL: Change this for production!
SECRET_KEY=django-insecure-your-secret-key-here-change-in-production

# ⚠️ CRITICAL: Must be "false" in production (Render, Heroku, etc.)
# Set to "false" to enable security features (HTTPS redirect, secure cookies, etc.)
# Local development can be "true"
DEBUG=true

# Comma-separated list of allowed hosts
# Local: 127.0.0.1,localhost,testserver
# Production: your-domain.com,www.your-domain.com
ALLOWED_HOSTS=127.0.0.1,localhost,testserver

# Comma-separated list of CSRF-trusted origins
# Local: http://127.0.0.1:8000,http://localhost:8000
# Production: https://your-domain.com,https://www.your-domain.com
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# ========== Database (Optional) ==========
# Leave empty to use SQLite (local development only)
# ⚠️ WARNING: SQLite data is lost on Render/Heroku restarts (ephemeral storage)
# For production, set to PostgreSQL URL
# Example: postgresql://user:password@host:5432/trinetra
DATABASE_URL=

# ========== Security (Production Only) ==========
# Set to "true" to enforce HTTPS redirect in production
# This makes the app refuse non-HTTPS connections on Render/Heroku
SECURE_SSL_REDIRECT=false

# ========== Other Settings ==========
# Timezone (default UTC is fine for most cases)
TIME_ZONE=UTC
